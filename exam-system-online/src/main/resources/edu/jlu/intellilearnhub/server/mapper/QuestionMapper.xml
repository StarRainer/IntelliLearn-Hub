<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.jlu.intellilearnhub.server.mapper.QuestionMapper">
    <select id="countByCategoryId" resultType="edu.jlu.intellilearnhub.server.dto.QuestionDto">
        SELECT
            category_id AS categoryId,
            COUNT(*) AS count
            FROM questions
            WHERE is_deleted = 0
            GROUP BY category_id;
    </select>
</mapper>